<h1 class="mb-3">Farm</h1>

<div class="mb-3">
    <span>Select Crop to Plant:</span>
    <button class="btn btn-sm @(_selectedCrop == EnumCropType.Honey ? "btn-primary" : "btn-outline-primary")"
            @onclick="() => SelectCrop(EnumCropType.Honey)">
        Honey
    </button>
    <button class="btn btn-sm @(_selectedCrop == EnumCropType.Shrimp ? "btn-primary" : "btn-outline-primary")"
            @onclick="() => SelectCrop(EnumCropType.Shrimp)">
        Shrimp
    </button>
</div>

<GridTwoColumnUnlimited ColumnGap="5px" RowGap="5px">
    @foreach (var habitat in state.Habitats)
    {
        <div class="card h-100 text-center" style="width: 40vw;">
            <div class="card-body d-flex flex-column justify-content-between p-2">
                <div class="small">
                    @if (habitat.State == EnumCropState.Empty)
                    {
                        <span class="text-muted">Empty</span>
                    }
                    else if (habitat.State == EnumCropState.Growing)
                    {
                        <div class="text-primary">
                            @GrowingText(habitat)
                        </div>
                        <div class="text-muted">
                            @ReadyText(habitat)
                        </div>
                    }
                    else
                    {
                        <span class="text-success">Ready</span>
                    }
                </div>
                <div>
                    @if (habitat.State == EnumCropState.Empty)
                    {
                        <PrimaryButton IsEnabled="CanPlant(habitat)" OnClick="() => Plant(habitat)">
                            @StartText
                        </PrimaryButton>
                    }
                    else if (habitat.State == EnumCropState.Ready)
                    {
                        <SuccessButton OnClick="() => Harvest(habitat)">
                            @HarvestText(habitat)
                        </SuccessButton>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary w-100" disabled>
                            Growing…
                        </button>
                    }
                </div>
            </div>
        </div>
    }
</GridTwoColumnUnlimited>
@if (state.Inventory.Any())
{
    <div class="mt-3">
        <h5>Inventory</h5>
        <GridTwoColumnUnlimited ColumnGap="20px">
            @foreach (var kvp in state.Inventory)
            {
                <div class="@css1.FwBold">@DisplayName(kvp.Key)</div>
                <div>@kvp.Value</div>
            }
        </GridTwoColumnUnlimited>
    </div>
}
else
{
    <div class="mt-3 text-muted">
        Inventory is empty
    </div>
}
@inherits TimedOnlyComponent
<h1 class="mb-3">Farm</h1>
@if (_hasUnlockedCrops == false)
{
    <div>
        There are no crops
    </div>
    return;
}
<div class="mb-3">
    <span>Select Crop to Plant:</span>
    @foreach (var item in _crops)
    {
        <button class="btn btn-sm @(_selectedItem == item ? "btn-primary" : "btn-outline-primary")"
                @onclick="() => SelectCrop(item)">
            @item
        </button>
    }
</div>
<div class="container p-0">
    <div class="row row-cols-1 row-cols-md-4 g-2">
        @foreach (var id in CropManager.GetUnlockedCrops)
        {
            EnumCropState state = GetState(id);
            <div class="col">
                <div class="card h-100 text-center">
                    <div class="card-body d-flex flex-column justify-content-between p-2">
                        <div class="small">
                            @if (state == EnumCropState.Empty)
                            {
                                <span class="text-muted">Empty</span>
                            }
                            else if (state == EnumCropState.Growing)
                            {
                                <div class="text-primary">
                                    @GrowingText(id)
                                </div>
                                <div class="text-muted">
                                    @ReadyText(id)
                                </div>
                            }
                            else
                            {
                                <span class="text-success">Ready</span>
                            }
                        </div>
                        <div>
                            @if (state == EnumCropState.Empty)
                            {
                                <PrimaryButton IsEnabled="CanPlant(id)" OnClick="() => Plant(id)">
                                    @StartText
                                </PrimaryButton>
                            }
                            else if (state == EnumCropState.Ready && CropManager.CanManuallyPickUpCrop)
                            {
                                <SuccessButton OnClick="() => Harvest(id)">
                                    @HarvestText(id)
                                </SuccessButton>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-secondary w-100" disabled>
                                    Growing…
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>